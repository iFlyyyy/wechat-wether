.temp {
   text-align: center;
   font-size:200rpx;
   line-height: 280rpx;
   opacity: 0.8;
}

.weather {
  text-align: center;
  font-size:40rpx;
  line-height: 56rpx;
}

.image{
  position: absolute;
  top: 0;
  left: 0;
  height: 100%;
  width: 100%;
  z-index: -1;
}

.wether-wrapper{
  position: relative;
  padding-bottom: 250rpx;
  padding-top: 174rpx;
}

.future-title{
  font-size: 30rpx;
  line-height: 42rpx;
  text-align: center;
  opacity: 0.6;
  margin-top: 30rpx
}

.mark{
  max-width:36rpx;
  max-height: 28rpx;
  margin-right: 10rpx
}

.forecast-item{
  flex-direction: column;
  display: flex;
  flex-shrink: 0;
  width: 120rpx;
  align-items: center;
  margin-top:30rpx;
  
}

.forecast-list{
  display: flex;
  bottom: 0
}

.forecast-time {
  font-size: 30rpx;
  line-height: 42rpx;
}

.forecast-image {
  margin-top: 50rpx;
  margin-bottom: 50rpx;
  width: 60rpx;
  height: 60rpx;
}

.forecast-temp {
  font-size: 40rpx;
  line-height: 56rpx
}

.today{
  display: flex;
  position: absolute;
  align-items: center;
  bottom: 0; 
  left: 60rpx;
  right: 60rpx;
  height: 60rpx;
  font-size: 30rpx;
  line-height: 42rpx;
  opacity: 0.5;
  border-top-style:dotted;
}

.today-temp{
  flex-grow: 1;
  text-align: right;
  padding-right: 30rpx;
}

.today-icon{
  width: 15rpx;
  height: 25rpx;
}